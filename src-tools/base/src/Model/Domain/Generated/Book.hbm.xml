<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Example.Project.Domain">
  <class name="Example.Project.Domain.Book, Example.Project.Model" table="books" schema="dbo" >
        <id name="Id" column="id">
      <generator class="native" />
    </id>
         
    <property name="Name">
      <column name="name" sql-type="nvarchar" />
    </property>
    <property name="Year">
      <column name="year" sql-type="int" />
    </property>

    <many-to-one name="Author">
      <column name="author_id"/>
    </many-to-one>

  </class>
</hibernate-mapping>