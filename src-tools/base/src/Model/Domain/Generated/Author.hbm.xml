<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Example.Project.Domain">
  <class name="Example.Project.Domain.Author, Example.Project.Model" table="authors" schema="dbo" >
        <id name="Id" column="id">
      <generator class="native" />
    </id>
         
    <property name="Name">
      <column name="name" sql-type="nvarchar" />
    </property>


    <set name="Books" inverse="true">
      <key>
        <column name="author_id" />
      </key>
      <one-to-many class="Book" />
    </set>
  </class>
</hibernate-mapping>